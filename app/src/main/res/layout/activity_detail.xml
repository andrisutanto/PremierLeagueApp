<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LLDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvIdEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="000000"
        android:textColor="#500557"/>

    <TextView
        android:id="@+id/tvTanggalPertandinganDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="12/04/2018"
        android:textColor="#500557"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tvVersusDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="VS"/>

    <TextView
        android:id="@+id/tvScoreHomeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tvVersusDetail"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="0"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgHomeDetail"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tvScoreHomeDetail"
        android:src="@drawable/img_arsenal"/>

    <TextView
        android:id="@+id/tvScoreAwayDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvVersusDetail"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="0"
        android:textSize="32sp"
        android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgAwayDetail"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvScoreAwayDetail"
            android:src="@drawable/img_mu"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvScoreHomeDetail">

    <TextView
        android:id="@+id/tvTeamHomeDetail"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Arsenal"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvFormationHomeDetail"
        android:layout_below="@+id/tvTeamHomeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"
        android:text="3-4-1-2"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvTeamAwayDetail"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Manchester Undited"
        android:maxLength="12"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvFormationAwayDetail"
        android:layout_below="@+id/tvTeamHomeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="4-4-2"
        android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#38023c"/>

    <TextView
        android:id="@+id/tvGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Goals"
        android:textColor="#500557"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGoals">


        <TextView
            android:id="@+id/tvHomeGoalDetails"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="72':Jamie Vardy;75':Kelechi Iheanacho;85':Kasper Schmeichel;"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvAwayGoalDetails"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="15':Nick Pope;"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>
